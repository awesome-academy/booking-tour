<div class="col-md-12">
  <div class="content-box-large">
    <div class="panel-heading">
      <div class="panel-title"><%= t "admin.index.list_hotel" %></div>
      <div class="panel-options">
        <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
        <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
      </div>
    </div>
    <div class="panel-body">
    <% flash.each do |key, value| %>
      <div class="row">
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
      </div>
    <% end %>
      <table class="table table-hover">
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Adress</th>
          <th>Phone</th>
          <th>Action</th>
        </tr>
        <tbody>
          <% @hotel.each do |hotel| %>
          <tr>
            <td><%= hotel.id%></td>
            <td><%= hotel.name %></td>
            <td><%= hotel.address %></td>
            <td><%= hotel.phone %></td>
            <td>
              <%= link_to edit_admin_hotel_path(hotel) do %>
                <i class="glyphicon glyphicon-pencil"></i>
              <% end %>
              <%= link_to admin_hotel_path(hotel), method: :delete, data: {confirm: "Your sure"} do %>
                <i class="glyphicon glyphicon-trash"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @hotel, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
</div>
