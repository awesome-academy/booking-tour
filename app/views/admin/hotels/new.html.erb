<div class="col-md-10">
  <div class="content-box-large">
    <div class="panel-heading">
      <div class="panel-title"><%= t "admin.new.add_hotel" %></div>

      <div class="panel-options">
        <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
        <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
      </div>
    </div>
    <div class="panel-body">
      <%= form_for [:admin,@hotel] do |f| %>
        <fieldset>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :address %>
            <%= f.text_field :address, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :phone %>
            <%= f.text_field :phone, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :picture %>
            <%= f.file_field :picture, accept: 'image/jpeg,image,gif,image,png', class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.cktext_area :description, class: "form-control", ckeditor: {language: "vn"} %>
          </div>
        </fieldset>
        <div>
            <%= f.submit t("admin.hotels.new.add_new"), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
