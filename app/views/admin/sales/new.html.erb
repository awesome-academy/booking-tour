<div class="col-md-6">
  <div class="content-box-large">
    <div class="panel-heading">
      <div class="panel-title"><%= t "admin.new.add_sale" %></div>

      <div class="panel-options">
        <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
        <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
      </div>
    </div>
    <div class="panel-body">
      <%= form_for [:admin,@sale] do |f| %>
        <fieldset>
          <div class="form-group">
            <%= f.label :sale_of %>
            <%= f.number_field :sale_of, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :tour_id, t("admin.new.tour") %>
            <%= f.select :tour_id, tour, class: "form-control" %>
          </div>
        </fieldset>
        <div>
            <%= f.submit t("admin.new.add_new"), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
