<div class="col-md-12">
  <div class="content-box-large">
    <div class="panel-heading">
      <div class="panel-title">List tour</div>
      <div class="panel-options">
        <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
        <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
      </div>
    </div>
    <div class="panel-body">
    <% flash.each do |key, value| %>
      <div class="row">
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
      </div>
    <% end %>
      <table class="table table-hover">
        <tr>
          <th>#</th>
          <th><%= t "admin.index.name" %></th>
          <th><%= t "admin.index.departure" %></th>
          <th><%= t "admin.index.duration" %></th>
          <th><%= t "admin.index.money" %></th>
          <th><%= t "admin.index.action" %></th>
        </tr>
        <tbody>
          <% @tours.each_with_index do |tour, index| %>
          <tr>
            <td><%= index %></td>
            <td><%= tour.name %></td>
            <td><%= tour.departureDay %></td>
            <td><%= tour.duration %></td>
            <td><%= tour.money %></td>
            <td>
              <%= link_to edit_admin_tour_path(tour) do %>
                <i class="glyphicon glyphicon-pencil"></i>
              <% end %>
              <%= link_to admin_tour_path(tour), method: :delete, data: {confirm: t("admin.index.you_sure")} do %>
                <i class="glyphicon glyphicon-trash"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
