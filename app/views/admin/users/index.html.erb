<div class="col-md-12">
  <div class="content-box-large">
    <div class="panel-heading">
      <div class="panel-title"><%= t "users.index.list_user" %></div>
      <div class="panel-options">
        <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
        <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
      </div>
    </div>
    <div class="panel-body">
    <% flash.each do |key, value| %>
      <div class="row">
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
      </div>
    <% end %>
      <table class="table table-hover">
        <tr>
          <th>#</th>
          <th><%= t "users.index.email" %></th>
          <th><%= t "users.index.name" %></th>
          <th><%= t "users.index.address" %></th>
          <th><%= t "users.index.phone" %></th>
          <th><%= t "users.index.permission" %></th>
          <th><%= t "users.index.action" %></th>
        </tr>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.id%></td>
            <td><%= user.email %></td>
            <td><%= user.name %></td>
            <td><%= user.address %></td>
            <td><%= user.phone %></td>
            <td><%= user.permission %></td>
            <td>
              <%= link_to edit_admin_user_path(user) do %>
                <i class="glyphicon glyphicon-pencil"></i>
              <% end %>
              <%= link_to admin_user_path(user), method: :delete, data: {confirm: t("admin.users.index.you_sure")} do %>
                <i class="glyphicon glyphicon-trash"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
       <%= paginate @users, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
</div>
